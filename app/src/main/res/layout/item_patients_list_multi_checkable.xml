<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_patient_container"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/genderImg"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/gender_image_content_description"
            android:src="@drawable/gender_male"/>

    <LinearLayout
            android:id="@+id/patient_details_container"
            android:layout_toEndOf="@+id/genderImg"
            android:orientation="vertical"
            android:layout_marginStart="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ListView
                android:id="@+id/tag_list_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <com.muzima.view.custom.CheckedRelativeLayout
            android:id="@+id/tags_scroller"
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:clickable="true">

            <LinearLayout
                android:id="@+id/menu_tags"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"/>
        </com.muzima.view.custom.CheckedRelativeLayout>

        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/identifier"
                    style="@style/ListDescription"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="?attr/primaryTextColor"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="end"/>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/item_patient_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/name"
                            style="@style/ListHeader"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_alignParentStart="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7dp"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/dateOfBirth"
                                style="@style/ListDescription"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="wrap_content"
                                android:layout_marginEnd="6dp"/>

                        <TextView
                                android:id="@+id/distanceToClientAddress"
                                style="@style/ListDescription"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="12dp"
                                android:gravity="end"/>
                    </LinearLayout>

                    <TextView
                            android:id="@+id/age_text_label"
                            android:layout_marginEnd="12dp"
                            android:paddingBottom="4dp"
                            android:textSize="12sp"
                            android:gravity="end"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="?attr/primaryTextColor"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View android:layout_below="@+id/patient_details_container"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="6dp"
          android:layout_marginStart="12dp"
          android:layout_marginEnd="12dp"
          android:background="@color/white_smoke_transparent"/>
</RelativeLayout>


